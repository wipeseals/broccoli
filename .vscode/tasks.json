{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run release",
            "type": "shell",
            "command": "cargo run --release",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cargo build --release",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "run debug",
            "type": "shell",
            "command": "cargo run",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "cargo build",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "fmt",
            "type": "shell",
            "command": "cargo fmt -- --check",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "fmt fix",
            "type": "shell",
            "command": "cargo fmt",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "clippy",
            "type": "shell",
            "command": "cargo clippy --all-features -- --deny=warnings",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "clippy fix",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty --allow-staged --all-features -- --deny=warnings",
            "options": {
                "cwd": "${workspaceFolder}/${input:crate}"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ],
    "inputs": [
        {
            "type":"pickString",
            "id": "crate",
            "description": "Select the crate to run the task for",
            "options": [
                "broccoli-app-rp2040",
                "broccoli-core",
            ]
        },
    ]
}